@model IEnumerable<kielb.Models.KB_Presupuesto_Dom>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
<link href="https://cdn.datatables.net/buttons/1.6.4/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />
<head>
    <title>Busqueda</title>
</head>

<form action="buscador" method="Post">

    <p align="center">
        <font face="Tahoma" size="2"><b><i>Ingrese el codigo de empleado a buscar</i></b></font>
    </p>
    <p align="center">
        <input type="text" name="palabra" size="20">
