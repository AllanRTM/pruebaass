@model IEnumerable<kielb.Models.KB_UsuariosKielsaBonos>

@{
    ViewBag.Title = "Listado de usuarios";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Crear usuario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Nombre
        </th>
        <th>
            Empresa
        </th>
        <th>
            Sucursal
        </th>
        <th>
            Estado
        </th>
        <th>
            Rol
        </th>
        <th>
            E-mail
        </th>
        <th>
            Contraseña
        </th>
        <th></th>
