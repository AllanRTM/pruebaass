@model kielb.Models.KB_Porcentajes
@{
    ViewBag.Title = "CargaPorcentajeComisiones";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
@using (Html.BeginForm("CargaPorcentajeComisiones", "CargaData", FormMethod.Post, new { enctype = "Multipart/form-data" }))
{
@Html.AntiForgeryToken()

    <div class="form-horizontal">
    <h2>Carga masiva de Porcentaje de comisiones</h2>
    <hr />
    <div class="col-md-12">
        <p class="card-text">
            Seleccione un archivo para comenzar la carga masiva. El archivo seleccionado deberá tener la siguiente estructura: <br /><br />
            <strong>ID</strong> (tipo número) <strong> | Cumplimiento </strong> (decimal) <strong>  | Comision <strong> (tipo número) | Cuadro A <strong> (tipo número) | Cuadro B <strong> (tipo número) | Cuadro C <strong> (tipo número) | Consumo <strong> (tipo número)  | Checklist <strong> (tipo número), | Mes <strong> (tipo número) | Año <strong> (tipo número) | Canje </strong> (tipo número)
        </p>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ruta, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ruta, new { Type = "file", accept = ".xlsx" })

            @Html.ValidationMessageFor(model => model.ruta, "", new { @class = "text-danger" })
        </div>
    </div>
    
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

</div>
}


