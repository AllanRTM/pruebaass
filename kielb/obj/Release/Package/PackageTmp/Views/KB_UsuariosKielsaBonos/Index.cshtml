        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.pass)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Empleado_id }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.Empleado_id }) |
